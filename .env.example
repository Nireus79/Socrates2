# Socrates2 Configuration Example
# Copy this file to .env and fill in your values

# === Backend API Configuration ===
# The base URL of the Socrates2 backend server
API_BASE_URL=http://localhost:8000

# === Authentication ===
# JWT token for API authentication
# Generate this from the web UI after logging in
API_TOKEN=your_jwt_token_here

# === LSP Server Configuration ===
# LSP server listen host
LSP_HOST=localhost

# LSP server listen port
LSP_PORT=8080

# LSP log level (DEBUG, INFO, WARNING, ERROR)
LSP_LOG_LEVEL=INFO

# LSP server log file location
LSP_LOG_FILE=/tmp/socrates2-lsp.log

# === Code Generation Configuration ===
# Timeout for code generation operations (seconds)
GENERATION_TIMEOUT=30

# === Caching ===
# Cache TTL for specifications (seconds)
CACHE_SPEC_TTL=300

# Cache TTL for projects (seconds)
CACHE_PROJECT_TTL=600

# === IDE Configuration ===
# VS Code Extension settings
VSCODE_API_URL=http://localhost:8000
VSCODE_ENABLE_DIAGNOSTICS=true
VSCODE_ENABLE_CODE_COMPLETION=true

# JetBrains Plugin settings
JETBRAINS_API_URL=http://localhost:8000
JETBRAINS_ENABLE_INSPECTIONS=true

# === Advanced Features ===
# Enable analytics (anonymous usage metrics)
ENABLE_ANALYTICS=false

# Enable debug logging
DEBUG=false

# === Optional: Database Configuration ===
# If running local backend (Phases 1-5)
DATABASE_URL_AUTH=postgresql://postgres:password@localhost:5432/socrates_auth
DATABASE_URL_SPECS=postgresql://postgres:password@localhost:5432/socrates_specs

# === Optional: CORS Configuration ===
# For frontend development
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

#!/usr/bin/env python3
"""
Socrates CLI Entry Point

This script serves as the entry point for the `socrates` command-line tool.
It can be installed as a console script via setuptools.

Usage:
    python socrates --help
    python socrates project list
    python socrates spec create --project proj_123 ...
    python socrates auth login
"""
import sys
import os

# Add the parent directory to the path
sys.path.insert(0, os.path.dirname(os.path.abspath(__file__)))

from app.cli import main

if __name__ == "__main__":
    main()

# Socrates2 - Environment Variables Template
# Copy this to .env and fill in your values

# =====DATABASE =====
DATABASE_URL_AUTH=postgresql://user:password@localhost:5432/socrates_auth
DATABASE_URL_SPECS=postgresql://user:password@localhost:5432/socrates_specs

# ===== SECURITY =====
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===== LLM API KEYS =====
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ===== APPLICATION =====
DEBUG=False
ENVIRONMENT=production  # development | staging | production
LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR

# ===== CORS (for future UI) =====
CORS_ORIGINS=http://localhost:3000,http://localhost:5173  # React dev servers
